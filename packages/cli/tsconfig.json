{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
